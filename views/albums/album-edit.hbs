{{!-- views/albums/album-edit.hbs --}}
{{!-- general nav bar settings from layout.hbs --}}

<br>
<h2>Edit the album: {{album.title}}</h2>
<br>

<form action="/albums/{{album._id}}/edit" method="post">
    <div class="container">

        <div class="row">
            <label> <h4>Title:</h4>
                <input type="text" name="title" value="{{album.title}}" />
            </label>
        </div>
        <br><br>

  
        <div class="row">
            <label> <h4>Artist:</h4>
                <input type="text" name="artist" value="{{album.artist}}" />
            </label>
        </div>
        <br><br>

        <div class="row">
            <label> <h4>Label:</h4>
                <input type="text" name="label" value="{{album.label}}" />
            </label>
        </div>
        <br><br>

        <div class="row">
            <label> <h4>Catalog Number:</h4>
                <input type="text" name="catalog" value="{{album.catalog}}" />
            </label>
        </div>
        <br><br>

        <div class="row">
            <label> <h4>Genre:</h4>
                <input type="text" name="genre" value="{{album.genre}}" />
            </label>
        </div>
        <br><br>

        <div>
            <button>Save changes</button>
        </div>
    </div>
  
</form>